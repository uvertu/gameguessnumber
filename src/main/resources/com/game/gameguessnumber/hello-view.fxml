<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.game.gameguessnumber.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Угадай число" textAlignment="CENTER">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Label fx:id="welcomeText" text="Добро пожаловать в игру!"
           textAlignment="CENTER" wrapText="true"/>

    <Button text="Начать игру" onAction="#onStartGameButtonClick"
            prefWidth="120" prefHeight="40"/>
</VBox>